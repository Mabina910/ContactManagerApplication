@model ContactManager.Models.Contact

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Delete Contact</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { padding: 2rem; background-color: #f2f2f2; }
        h2 { color: #d63384; margin-bottom: 1rem; }
        .btn-danger:hover { background-color: #c82368; }
    </style>
</head>
<body>

<h2>Delete Contact</h2>

<div class="card p-4 shadow-sm bg-white rounded">
    <p>Are you sure you want to delete this contact?</p>
    <p><strong>@Model.FullName</strong></p>
    <p><strong>@Model.Email</strong></p>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

</body>
</html>
