@model IEnumerable<ContactManager.Models.Contact>

@{
    ViewData["Title"] = "Contacts";
}

<h2>Contacts</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Contact</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var contact in Model)
{
        <tr>
            <td>@contact.FullName</td>
            <td>@contact.Email</td>
            <td>@contact.Phone</td>
            <td>@contact.Address</td>
            <td>@contact.CreatedAt.ToString("g")</td>
            <td>
                <a asp-action="Details" asp-route-id="@contact.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
