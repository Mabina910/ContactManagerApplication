@model ContactManager.Models.Contact

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Contact Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { padding: 2rem; background-color: #f2f2f2; }
        h2 { margin-bottom: 1rem; color: #333; }
        .card { padding: 2rem; background-color: white; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
        .btn-custom { background-color: #0d6efd; color: white; }
        .btn-custom:hover { background-color: #0b5ed7; }
    </style>
</head>
<body>

<h2>Contact Details</h2>

<div class="card">
    <p><strong>Name:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p><strong>Notes:</strong> @Model.Notes</p>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-custom">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</div>

</body>
</html>
